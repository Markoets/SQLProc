<body style="padding-top: 10px">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="panel-heading">
            <h3>Employee Search Form</h3>
        </div>
        <form asp-controller="Employee" asp-action="DynamicSQLInStoredProcedure">
            <div>
                <label for="inputFirstname">First Name</label>
                <br />
                <input type="text" name="inputFirstname" placeholder="First Name" />
            </div>
            <br />
            <div>
                <label for="inputLastname">Last Name</label>
                <br />
                <input type="text" name="inputLastname" placeholder="Last Name" />
            </div>
            <br />
            <div>
                <label for="inputGender">Gender</label>
                <br />
                <select name="inputGender">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <br />
            <div>
                <label for="inputSalary">Salary</label>
                <br />
                <input type="number" name="inputSalary" placeholder="Salary" />
            </div>
            <br />
            <input type="submit" value="DynamicSQL" />
        </form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Salary</th>
                </tr>
            <tbody>
                @foreach (var employee in Model)
                {
    <tr>
        <td>@employee.FirstName</td>
        <td>@employee.LastName</td>
        <td>@employee.Gender</td>
        <td>@employee.Salary</td>
    </tr>}
            </tbody>
        </table>
    </div>
</body>